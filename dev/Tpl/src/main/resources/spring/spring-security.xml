	<global-method-security pre-post-annotations="enabled" secured-annotations="enabled"/>
	
	<beans:bean id="securityProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<beans:property name="locations">
			<beans:list>			
				<beans:value>classpath:security.properties</beans:value>
			</beans:list>
		</beans:property>
	</beans:bean>
	
	<beans:bean id="componentSecurityListener" class="ar.com.hexacta.tpl.presentation.security.ComponentSecurityListener">
		<beans:property name="properties" ref="securityProperties"/>
	</beans:bean>
--></beans:beans>

